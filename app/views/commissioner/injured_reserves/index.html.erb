<div id="reserves-index">
    <h3 style="display: inline-block">Players on Reserves</h3>
    <span class="header-left"><%= link_to "Reserve Player", new_commissioner_reserf_path %></span>
    <br><br>
    <ul>
        <% @players.each do |player| %>
            <strong><%= "#{player.full_name}, #{player.position}, #{player.nfl_abbrev}" %></strong>
            <br>
            <%= "TLFL #{player.tlfl_team.nickname}" %>
            <br>
            <%= "Replacement: #{player.replacement_name}" %>
            <br>
            <div class="edit-font">
                <%= link_to "Activate #{player.last_name}/Change Replacement", commissioner_reserves_activate_replace_path(rs_player: player.id, replacement: player.ir_id) %>
            </div>
            <br>
        <% end %>
    </ul>
</div>