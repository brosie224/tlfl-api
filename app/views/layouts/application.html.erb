<!DOCTYPE html>
<html>
  <head>
    <title>TLFL</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
        <%= link_to "Perform Trade", new_commissioner_trade_path %> |
        <%= link_to "Log Out", commissioner_logout_path %>
    </nav>
    <% if flash[:alert] %>
      <br>
      <div style="color:red"><em><%= flash[:alert] %></em></div>
    <% end %>
    <% if flash[:notice] %>
      <br>
      <div style="color:green"><%= flash[:notice] %></div>
    <% end %>
    <br>
    <%= yield %>
  </body>
</html>
